extends layout
block content
    //settings page allows theme to be set.
    div#gallery
        .panel.panel-default(style='width:80%; margin-left:10%; background-color:grey;')
            .panel-heading(style='background-color:lightgrey;')
                h1.
                    Theme Settings
                br
            .panel-body(style='background-color:grey;')
                form(name="settings", method="post" action="/settings/submit")
                    div#Themes
                        each setting in settings
                            if setting.theme == "default"
                                br
                                | Default: &nbsp;
                                input(type="radio" value ="default"  name="theme"  checked)
                                br
                                | Ocean: &nbsp;
                                input(type="radio" value ="ocean" name="theme" )
                            else
                                br
                                | Default: &nbsp;
                                input(type="radio" value ="default" name="theme")
                                br
                                | Ocean: &nbsp;
                                input(type="radio" value ="ocean" name="theme"  checked)

                        hr
                    div#savesettings
                        input(type="submit" name="submit")



