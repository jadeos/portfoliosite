extends layout
block content
    //Template for Ocean theme. This changes the background image and displays a list of artists
    div#bluetheme
        .panel.panel-default(style='width:80%; margin-left:10%; background-color:cornflowerblue;')
            .panel-heading(style="background-image:url('/images/ocean.jpg'); background-repeat:no-repeat;background-size:cover;"  )
                h1.
                    Artists Directory
            .panel-body(style="background-image:url('/images/ocean.jpg'); background-repeat:no-repeat;background-size:cover;" )
                each arts in artists
                    a(name = '#{arts.fc}' id ='#{arts.fc}')
                    div.tategallery
                        div(id='#{arts.fc}')
                        h2=arts.fc
                        strong Date of Birth
                        #{arts.birthYear}
                        br
                        strong Gender:
                        #{arts.gender}
                        br
                        strong Total Works
                        #{arts.totalWorks}
                        br
                        strong URL:
                        a(href='#{arts.url}' class="artwork_url")= arts.url

