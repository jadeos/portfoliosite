extends layout
block content
    //default theme displays defualt styling. A more neutral approach
    div#greytheme
        .panel.panel-default(style='width:80%; margin-left:10%; background-color:grey;')
            .panel-heading(style='background-color:lightgrey;')
                h1.
                    Artists Directory
                br
            .panel-body(style='background-color:grey;')
                //render data from artist collection
                each arts in artists
                    a(name = '#{arts.fc}' id ='#{arts.fc}')
                    div.tategallery
                       div(id = '#{arts.fc}')
                            h2=arts.fc
                            strong Date of Birth
                            #{arts.birthYear}
                            br
                            strong Gender:
                            #{arts.gender}
                            br
                            strong Total Works
                            #{arts.totalWorks}
                            br
                            strong URL:
                            a(href='#{arts.url}' class="artwork_url")= arts.url


